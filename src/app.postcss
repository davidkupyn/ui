@import url('https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,500;1,600;1,700;1,800&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	:root {
		--radius: 0.75rem;
		--border: theme('colors.base.200');

		--color-primary: theme('colors.primary.900');
		--color-primary-focus: theme('colors.primary.800');
		--color-primary-foreground: theme('colors.primary.50');

		--color-accent: theme('colors.accent.500');
		--color-accent-focus: theme('colors.accent.600');
		--color-accent-foreground: theme('colors.accent.950');

		--color-background: theme('colors.base.50');
		--color-foreground: theme('colors.base.900');

		--color-muted: theme('colors.base.200');
		--color-muted-foreground: theme('colors.base.500');

		--color-success: theme('colors.green.500');
		--color-success-focus: theme('colors.green.600');
		--color-success-foreground: theme('colors.green.50');

		--color-warning: theme('colors.yellow.500');
		--color-warning-focus: theme('colors.yellow.600');
		--color-warning-foreground: theme('colors.yellow.950');

		--color-error: theme('colors.red.500');
		--color-error-focus: theme('colors.red.600');
		--color-error-foreground: theme('colors.red.50');

		--color-info: theme('colors.blue.500');
		--color-info-focus: theme('colors.blue.600');
		--color-info-foreground: theme('colors.blue.50');

		/* --color-neutral: theme('colors.gray.500');
		--color-neutral-focus: theme('colors.gray.600'); */
	}
	@media (prefers-color-scheme: dark) {
		:root {
			--border: theme('colors.base.800');

			--color-primary: theme('colors.primary.50');
			--color-primary-focus: theme('colors.primary.200');
			--color-primary-foreground: theme('colors.primary.950');

			--color-accent: theme('colors.accent.700');
			--color-accent-focus: theme('colors.accent.600');
			--color-accent-foreground: theme('colors.accent.500');

			--color-background: theme('colors.base.950');
			--color-foreground: theme('colors.base.50');

			--color-muted: theme('colors.base.900');
			--color-muted-foreground: theme('colors.base.400');

			--color-success: theme('colors.green.500');
			--color-success-focus: theme('colors.green.600');
			--color-success-foreground: theme('colors.green.50');

			--color-warning: theme('colors.yellow.500');
			--color-warning-focus: theme('colors.yellow.600');
			--color-warning-foreground: theme('colors.yellow.950');

			--color-error: theme('colors.red.500');
			--color-error-focus: theme('colors.red.600');
			--color-error-foreground: theme('colors.red.50');

			--color-info: theme('colors.blue.500');
			--color-info-focus: theme('colors.blue.600');
			--color-info-foreground: theme('colors.blue.50');
		}
	}
}
@layer base {
	input[data-autocompleted] {
		background-color: transparent !important;
	}

	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}
	html {
		color-scheme: light dark;
		scroll-behaviour: smooth;
	}
	kbd {
		@apply pointer-events-none hidden text-foreground py-1 select-none items-center gap-1 rounded-md bg-background px-1.5 font-mono text-xs font-medium opacity-100 sm:flex;
	}

	body {
		@apply bg-background min-h-screen text-foreground selection:bg-primary-500/30 overscroll-y-none transition-colors font-sans;
		-webkit-tap-highlight-color: transparent;
	}
}

.tippy-box {
	@apply inline-block rounded-lg border border-border bg-background px-2.5 py-1 text-sm font-medium shadow-sm;
}

@layer utilities {
	.convex {
		@apply bg-muted shadow-convex shadow-base-50 dark:shadow-base-500;
	}

	.stack {
		@apply inline-grid place-items-center items-end gap-3;

		& > * {
			@apply col-start-1 row-start-1 translate-y-4 scale-90 z-[4];
		}
		& > *:nth-child(2) {
			@apply translate-y-2 scale-95 z-[5];
		}
		& > *:nth-child(1) {
			@apply translate-y-0 scale-100 z-[6];
		}

		&-inverted {
			@apply stack;
			& > * {
				@apply -translate-y-4 -rotate-12;
			}
			& > *:nth-child(2) {
				@apply -translate-y-2 rotate-12;
			}
			& > *:nth-child(1) {
				@apply translate-y-0;
			}
		}
	}
}

@layer components {
	.input {
		@apply border-0 disabled:cursor-not-allowed disabled:ring-0 resize-none disabled:opacity-50 hover:ring-accent text-foreground focus:ring-accent placeholder:text-muted-foreground bg-base-200/80 dark:bg-base-900 h-9 rounded-xl px-4 text-base sm:text-sm outline-none ring-1 ring-transparent transition duration-200 data-[invalid]:hover:ring-error data-[invalid]:focus:ring-error data-[invalid]:ring-error invalid:hover:ring-error invalid:focus:ring-error invalid:ring-error;

		> .icon-left {
			@apply text-muted-foreground focus-visible:text-foreground hover:text-foreground aria-pressed:text-foreground transition-colors focus-visible:ring-offset-0 min-w-[1.5rem] -ml-1 mr-2;
		}
		> .icon-right {
			@apply text-muted-foreground focus-visible:text-foreground hover:text-foreground aria-pressed:text-foreground transition-colors focus-visible:ring-offset-0 min-w-[1.5rem] -mr-1 ml-2;
		}

		&-label {
			@apply text-muted-foreground grid w-fit gap-2 text-sm;
		}

		&-group {
			@apply input disabled:[&>*]:cursor-not-allowed focus-within:ring-accent flex items-center overflow-hidden px-4 data-[invalid]:hover:ring-error data-[invalid]:focus:ring-error data-[invalid]:ring-error;

			> input,
			textarea {
				@apply sm:text-sm placeholder:text-muted-foreground w-full border-0 bg-transparent outline-none transition focus:ring-0 resize-none px-0;
			}
		}
	}

	textarea.input {
		@apply py-3;
	}

	.checkbox {
		@apply h-5 w-5 cursor-pointer rounded-md focus:ring-transparent border-base-400 dark:border-base-700 bg-transparent text-accent outline-0 ring-accent-focus focus-visible:ring-muted-foreground focus-visible:ring-offset-background focus-visible:ring-offset-2 focus:ring-offset-0;
	}
	.badge {
		@apply inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-muted-foreground focus:ring-offset-2 bg-primary text-background;

		&-danger {
			@apply bg-red-500/20 border border-red-500/20 text-error dark:text-red-400;
		}

		&-success {
			@apply bg-green-500/20 border border-green-500/20 text-green-700 dark:text-green-400;
		}

		&-accent {
			@apply bg-accent-600/20 border border-accent-500/20 text-accent-600 dark:bg-accent-500/20 dark:border-accent-300/10 dark:text-accent-400;
		}

		&-outline {
			@apply bg-transparent border dark:border-base-800 border-base-300 text-base-600 dark:text-base-300 dark:hover:text-base-50 hover:text-base-900;
		}
	}

	.skeleton {
		@apply bg-base-200/50 dark:bg-base-800 rounded-xl animate-pulse overflow-hidden;
	}

	.btn {
		@apply gap-2 inline-flex text-primary-foreground items-center justify-center rounded-xl active:scale-95 text-sm font-medium transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary-focus focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none bg-primary hover:bg-primary-focus ring-offset-background h-9 py-2 px-4;

		&-outline {
			@apply bg-transparent border border-border text-foreground hover:bg-border;
		}

		&-secondary {
			@apply bg-base-200/90 hover:bg-muted dark:bg-base-900/70 dark:hover:bg-muted text-foreground;
		}

		&-text {
			@apply hover:bg-transparent bg-transparent text-muted-foreground focus-visible:text-foreground hover:text-foreground aria-pressed:text-foreground data-[selected]:text-foreground aria-[current=true]:text-foreground aria-pressed:underline underline-offset-4 aria-[current=true]:underline focus-visible:ring-offset-0;
		}

		&-ghost {
			@apply bg-transparent hover:bg-base-200 dark:hover:bg-base-800/50 text-muted-foreground focus-visible:text-foreground dark:focus-visible:text-base-300 hover:text-foreground aria-pressed:text-foreground;
		}

		&-danger {
			@apply bg-error text-error-foreground hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700;
		}

		&-link {
			@apply hover:bg-transparent bg-transparent underline-offset-4 underline text-accent hover:text-accent-focus;

			&.btn-secondary {
				@apply text-foreground;
			}
		}

		&-sm {
			@apply h-9 px-3 rounded-lg;
		}

		&-lg {
			@apply h-11 px-6 text-base;
		}
	}

	.table {
		@apply w-full caption-bottom overflow-x-scroll;

		&-custom {
			@apply w-full overflow-x-scroll;
		}
		&-container {
			@apply w-full overflow-auto;
		}
		&-head {
			@apply [&_tr]:border-b [&_tr]:border-muted hover:bg-muted transition-colors;
		}
		&-header {
			@apply text-left text-sm px-4 py-2 text-muted-foreground uppercase font-semibold hover:text-foreground cursor-pointer transition select-text;
		}
		&-body {
			@apply [&_tr]:border-b [&_tr:last-child]:border-none relative;
		}
		&-row {
			@apply border-muted transition-colors data-[state=selected]:bg-accent-500/10 data-[state=selected]:hover:bg-accent-600/10 hover:bg-base-200/50 dark:hover:bg-base-900/50 focus:bg-base-200/80 dark:focus:bg-base-900/80 outline-none data-[state=selected]:focus:bg-accent-600/20;
		}
		&-cell {
			@apply px-4 py-5;
		}

		> thead {
			@apply table-head;

			> tr > th {
				@apply table-header;
			}
		}

		> tbody {
			@apply table-body;

			> tr {
				@apply table-row;

				> td {
					@apply table-cell;
				}
			}
		}
	}
}
